@page "/chooseATM"
@using ATMBank_.Models;
@using ATMBank_.Context;
@using ATMBank_.Data;
@inject ATMService atmService

<PageTitle>ATM Bank</PageTitle>

<h1 class="mt-3 fst-italic">Pilih ATM</h1>

@if (ATMList is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row mt-5">
        @foreach (var atm in ATMList)
        {
            <div class="col-sm-2">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@atm.NamaATM</h5>
                        <p class="card-text">Pilih ATM ini</p>
                        <a href="inputRekening/@atm.Id" class="btn btn-primary">Pilih</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    List<ATM>? ATMList;

    protected override async Task OnInitializedAsync()
    {
        ATMList = await Task.Run(() => atmService.GetAllATM());
    }
}